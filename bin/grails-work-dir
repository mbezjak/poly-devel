#!/bin/bash
#

set -o errexit

declare -r config=grails-app/conf/BuildConfig.groovy
declare -r dir=$(awk -F= '/grails\.project\.work\.dir/{print $2}' $config | strip-quotes | trim)

if [[ -n "$dir" ]]; then
    echo "$dir"
else
    echo "$HOME/.grails/$(container-version)/projects/$(project-dir)"
fi

exit 0
