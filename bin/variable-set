#!/bin/bash
#

set -o errexit

function usage { echo "Usage: $(basename $0) FILE VARNAME [VALUE]"; }

declare -r file="$1"
declare -r varname="$2"
declare -r value="$3"
[[ -z "$file" || -z "$varname" ]] && usage && die
validate-file-exists "$file"

sed -i "s/^\(\s*\(val\|var\|def\)\s\+$varname\s*=\s*\).*$/\1$value/" $file

exit 0
