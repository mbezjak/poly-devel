#!/bin/bash
#

set -o errexit

function usage { echo "$(basename $0) VERSION"; }

declare -r version="$1"
declare -r project=$(project-dir)

[[ -z "$version" ]] && usage && die


if is-grails-project; then
    sed -i "s/app.version=.*/app.version=$version/" application.properties

elif is-grails-plugin; then
    sed -i 's|\(def version \+= \)".\+"|\1"'$version'"|' $(grails-find-plugin-descriptor)

elif is-playframework; then
    sed -i 's|\(val appVersion \+= \)".\+"|\1"'$version'"|' project/Build.scala

elif is-gradle; then
    sed -i "s|\(version = \)'.\+'|\1'$version'|" build.gradle

else
    fail "How to update version in: $project?"
fi

exit 0
