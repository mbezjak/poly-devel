#!/bin/bash
#

set -o errexit

function usage { echo "Usage: $(basename $0) VERSION"; }

declare -r version="$1"
declare -r project=$(project-dir)

[[ -z "$version" ]] && usage && die


if is-grails-project; then
    properties-set application.properties app.version $version

elif is-grails-plugin; then
    sed -i "s|\(def version \+= \)$rev|\1'$version'|" $(grails-find-plugin-descriptor)

elif is-playframework; then
    sed -i "s|\(val appVersion \+= \)$rev|\1\"$version\"|" project/Build.scala

elif is-gradle; then
    properties-set build.gradle version "'$version'"

elif [[ -x poly-devel/update-version.sh ]]; then
    poly-devel/update-version.sh "$version"

else
    fail "How to update version in: $project?"
fi

exit 0
