#!/bin/bash
#

set -o errexit

declare -r project=$(project-dir)

if is-grails; then
    properties-get application.properties app.name

elif is-playframework; then
    variable-get project/Build.scala appName | strip-quotes

elif is-gradle; then
    if [[ -f settings.gradle ]]; then
        properties-get settings.gradle rootProject.name | strip-quotes
    else
        echo $project
    fi

else
    fail "How to get name from: $project?"
fi

exit 0
