#!/bin/bash
#

set -o errexit

declare -r version="$1"

release-pre "$version"

declare -r tasks=$(run-gradle tasks)
function has-task { [[ $(echo "$tasks" | grep -c "^$1") == 1 ]]; }
if has-task uploadArchives; then
    run-gradle clean build uploadArchives
else
    run-gradle clean build
fi

release-post "$version"

exit 0
