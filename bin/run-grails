#!/bin/bash
#

set -o errexit

if [[ -x grailsw ]]; then
    # plain-output because of:
    # http://jira.grails.org/browse/GRAILS-10203
    # http://jira.grails.org/browse/GRAILS-10752
    ./grailsw -plain-output "$@"

    # version 2.{2,3}.x doesn't end with one
    newline

else # version <= 1.3.x
    grails "$@"
fi

exit 0
